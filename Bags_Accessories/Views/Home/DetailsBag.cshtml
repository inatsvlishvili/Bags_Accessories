@model Bag

@{
    ViewData["Title"] = "Details Bag";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="main-banner" id="top">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-6">
                <div>
                    @*  <img src="~/productImages/@Model.ImageName" /> *@
                    <div>
                        @if (Model.Gender == 1)
                        {
                            @* <img src="~/productImages/WomenBagImg/@Model.ImageName" style="width:500px;height:600px" /> *@
                            <img src="~/productImages/WomenBagImg/@Model.ImageName"/>


                        }
                        else if (Model.Gender == 2)
                        {
                            @* <img src="~/productImages/ManBagImg/@Model.ImageName" style="width:500px;height:600px" /> *@
                            <img src="~/productImages/ManBagImg/@Model.ImageName" />

                        }
                        else if (Model.Gender == 3)
                        {
                            @* <img src="~/productImages/KidBagImg/@Model.ImageName" style="width:500px;height:600px" /> *@
                            <img src="~/productImages/KidBagImg/@Model.ImageName" />

                        }

                    </div>

                </div>
                <div>
                    @if (Model.Gender == 1)
                    {
                        <label><b>ტიპი:</b> ქალი</label>
                    }
                    else if (Model.Gender == 2)
                    {
                        <label><b>ტიპი:</b> კაცი</label>
                    }
                    else if (Model.Gender == 3)
                    {
                        <label><b>ტიპი:</b> ბავშვი</label>
                    }
                </div>
                <div>
                    <b>სახელი:</b> @Model.Name
                </div>
                <div>
                    <b>ფასი:</b>  @Model.Price ლარი
                </div>
                <div>
                    <b>დარჩენილი რაოდენობა:</b> @Model.Quantity
                </div>

            </div>
        </div>
    </div>
</div>
<a href="/Home/ClientOrder/?BagId=@Model.ID" class="btn btn-primary">ყიდვა</a>
<table>
@foreach (var item in ViewBag.Comments)
{
    
        <tr>
            <td>User: </td>
            <td>@item.Name</td>
        </tr>
        <tr>
            <td>Comment: </td>
            <td>@item.CommentTXT</td>
        </tr>
        <tr>
            <td>datetime: </td>
            <td>@item.CreatedateTime</td>
        </tr>
    
}
</table>
<div class="contact-us">
    <div class="col-lg-4">
        <div class="section-heading">
            <h2>კომენტარი</h2>
            @*  <span></span> *@
        </div>
        <form id="CommentClient" controller="Home" action="DetailsBag" method="post">
            <input type="hidden" name="BagID" value="@Model.ID" />
            <div class="row">
                <div class="col-lg-6">
                    <fieldset>
                        <input name="name" type="text" id="Name" placeholder="სახელი" required="">
                    </fieldset>
                </div>
                <div class="col-lg-6">
                    <fieldset>
                        <input name="email" type="text" id="Email" placeholder="მეილი" required="">
                    </fieldset>
                </div>
                <div class="col-lg-12">
                    <fieldset>
                        <textarea name="commentTXT" rows="6" id="CommentTXT" placeholder="ტექსტი" required=""></textarea>
                    </fieldset>
                </div>
                <div class="col-lg-12">
                    <button type="submit" id="form-submit" class="main-dark-button" style="width:100px">გაგზავნა<i class="fa fa-paper-plane"></i></button>

                </div>
            </div>
        </form>
    </div>
</div>


