@model Bag

@{
    ViewData["Title"] = "Details Bag";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="main-banner" id="top">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-6">
                <div>
                   @*  <img src="~/productImages/@Model.ImageName" /> *@
                    <div>
                        @if (Model.Gender == 1)
                        {
                            <img src="~/productImages/WomenBagImg/@Model.ImageName" style="width:500px;height:600px" />
                        
                        }
                        else if (Model.Gender == 2)
                        {
                        <img src="~/productImages/ManBagImg/@Model.ImageName" style="width:500px;height:600px"  />
                        }
                        else if (Model.Gender == 3)
                        {
                            <img src="~/productImages/KidBagImg/@Model.ImageName" style="width:500px;height:600px" />
                        }


                       
                    </div>

                </div>
                <div>
                    @if (Model.Gender == 1)
                    {
                        <label><b>ტიპი:</b> ქალი</label>
                    }
                    else if (Model.Gender == 2)
                    {
                        <label><b>ტიპი:</b> კაცი</label>
                    }
                    else if (Model.Gender == 3)
                    {
                        <label><b>ტიპი:</b> ბავშვი</label>
                    }
                </div>
                <div>
                    <b>სახელი:</b> @Model.Name
                </div>
                <div>
                    <b>ფასი:</b>  @Model.Price ლარი
                </div>
                <div>
                    <b>დარჩენილი რაოდენობა:</b> @Model.Quantity
                </div>

            </div>
        </div>
    </div>
</div>
<div class="contact-us">
    <div class="col-lg-4">
        <div class="section-heading">
            <h2>კომენტარი</h2>
            @*  <span></span> *@
        </div>
        <form id="comment" controller="Home" action="DetailsBag" method="post">
            <div class="row">
                <div class="col-lg-6">
                    <fieldset>
                        <input name="name" type="text" id="name" placeholder="სახელი" required="">
                    </fieldset>
                </div>
                <div class="col-lg-6">
                    <fieldset>
                        <input name="email" type="text" id="email" placeholder="მეილი" required="">
                    </fieldset>
                </div>
                <div class="col-lg-12">
                    <fieldset>
                        <textarea name="message" rows="6" id="message" placeholder="ტექსტი" required=""></textarea>
                    </fieldset>
                </div>
                <div class="col-lg-12">

                    <button type="submit" id="form-submit" class="main-dark-button" style="width:90px">დაწერა<i class="fa fa-paper-plane"></i></button>
                </div>
            </div>
        </form>
    </div>
</div>
   

