@model Bag

@{
    ViewData["Title"] = "Details Bag";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="main-banner" id="top">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-6">
                <div>
                    <img src="~/productImages/@Model.ImageName" />
                </div>
                <div>
                    @if (Model.Gender == 1)
                    {
                        <label>ტიპი: ქალი</label>
                    }
                    else if (Model.Gender == 2)
                    {
                        <label>ტიპი: კაცი</label>
                    }
                    else if (Model.Gender == 3)
                    {
                        <label>ტიპი: ბავშვი</label>
                    }
                </div>
                <div>
                    სახელი: @Model.Name
                </div>
                <div>
                    ფასი:  @Model.Price ლარი
                </div>
                <div>
                    დარჩენილი რაოდენობა: @Model.Quantity
                </div>

            </div>
        </div>
    </div>
</div>
<div class="contact-us">
    <div class="col-lg-4">
        <div class="section-heading">
            <h2>კომენტარი</h2>
            @*  <span></span> *@
        </div>
        <form id="comment" controller="Home" action="DetailsBag" method="post">
            <div class="row">
                <div class="col-lg-6">
                    <fieldset>
                        <input name="name" type="text" id="name" placeholder="სახელი" required="">
                    </fieldset>
                </div>
                <div class="col-lg-6">
                    <fieldset>
                        <input name="email" type="text" id="email" placeholder="მეილი" required="">
                    </fieldset>
                </div>
                <div class="col-lg-12">
                    <fieldset>
                        <textarea name="message" rows="6" id="message" placeholder="ტექსტი" required=""></textarea>
                    </fieldset>
                </div>
                <div class="col-lg-12">

                    <button type="submit" id="form-submit" class="main-dark-button" style="width:90px">დაწერა<i class="fa fa-paper-plane"></i></button>
                </div>
            </div>
        </form>
    </div>
</div>
   

