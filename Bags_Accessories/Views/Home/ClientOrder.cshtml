@{
    ViewData["Title"] = "ClientOrder";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- ***** Main Banner Area Start ***** -->
<div class="page-heading about-page-heading" id="top">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="inner-content">
                    <h2>Contact Us</h2>
                    <span>Awesome, clean &amp; creative HTML5 Template</span>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- ***** Main Banner Area End ***** -->
<!-- ***** Contact Area Starts ***** -->
<div class="contact-us">
    <div class="container">
        <div class="row">
            <div class="col-lg-6">
                <div class="section-heading">
                    <h2>ყ ი დ ვ ა</h2>
                    <span>გთხოვთ, დადასტურებამდე გადაამოწმოთ შევსებული მონაცემები</span>
                </div>

                <form id="ClientOrder" action="" method="post">
                    <input type="hidden" name="BagID" value="@ViewBag.BagId" />
                    <input type="hidden" name="AccessorieID" value="@ViewBag.AccessorieId" />
                    <div class="row">
                        <div class="col-lg-7">
                            <fieldset>
                                <input name="FirstName" type="text" id="FirstName" placeholder="სახელი" required="">
                            </fieldset>
                        </div>
                        <div class="col-lg-7">
                            <fieldset>
                                <input name="LastName" type="text" id="LastName" placeholder="გვარი" required="">
                            </fieldset>
                        </div>
                        <div class="col-lg-7">
                            <fieldset>
                                <input name="PasportID" type="text" id="PasportID" placeholder="პ/ნ პირადი ნომერი" required="">
                            </fieldset>
                        </div> 
                        <div class="col-lg-7">
                            <fieldset>
                                <input name="Phone" type="text" id="Phone" placeholder="ტელეფონი" required="">
                            </fieldset>
                        </div>
                        <div class="col-lg-7">
                            <fieldset>
                                <input name="Address" type="text" id="Address" placeholder="მისამართი" required="">
                            </fieldset>
                        </div>

                        <div class="col-lg-12">
                            <fieldset>
                                <textarea name="CommentTXT" rows="6" id="CommentTXT" placeholder="კომენტარი" required=""></textarea>
                            </fieldset>
                        </div>
                        <div class="col-lg-12">

                            <button type="submit" id="form-submit" class="main-dark-button" style="width:90px">ყიდვა<i class="fa fa-paper-plane"></i></button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
