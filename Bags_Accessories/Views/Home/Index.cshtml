                                    </div>
                                    @* <img src="assets/images/men-01.jpg" alt=""> *@
                                    <a href="@("Home\\DetailsBag\\"+item.ID)"><img src="~/productImages/WomenBagImg@(item.ImageName)" alt=""></a>
                                </div>
                                <div class="down-content">
                                    <h4><a href="@("Home\\DetailsBag\\"+item.ID)">@item.Name</a></h4>
                                    <span>@item.Price ₾</span>
                                </div>
                            </div>
                        }

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
