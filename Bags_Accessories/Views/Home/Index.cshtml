    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="men-item-carousel">
                    <div class="owl-men-item owl-carousel">

                        @foreach (var item in ViewBag.WomenBags)
                        {

                            <div class="item">
                                <div class="thumb">
                                    <div class="hover-content">
                                        <ul>
                                            <li><a href="@("Home\\DetailsBag\\"+item.ID)"><i class="fa fa-eye"></i></a></li>
                                            @* <li><a href="single-product.html"><i class="fa fa-star"></i></a></li> *@
