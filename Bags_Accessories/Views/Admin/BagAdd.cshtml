@model Bags_Accessories.Models.Bag

@{
    ViewData["Title"] = "BagAdd";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>ჩანთის დამატება</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="BagAdd" enctype="multipart/form-data">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <option value=>ტიპი</option>
                <select asp-for="Gender">
                    <option value="1">ქალი</option>
                    <option value="2">კაცი</option>
                    <option value="3">ბავშვი</option>
                </select>
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>
            <div class="form-group">
                <option value=>სახელი</option>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <option value=>ფასი</option>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <option value=>რაოდენობა</option>
                <input asp-for="Quantity" class="form-control" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <option value=>სურათი</option>
                <input asp-for="ImageName" class="form-control" />
                <span asp-validation-for="ImageName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="file" name="ImageFile" />
            </div>
            <div class="form-group">
                <input type="submit" value="დამატება" class="btn btn-primary" />
            </div>

            <div style="color:green">@ViewBag.Succes</div>
            <div style="color:red">@ViewBag.Error</div>
        </form>
    </div>
</div>
<div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
